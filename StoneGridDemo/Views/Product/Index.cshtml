@model IEnumerable<Product>

   <div class="container p-3">
       <div class="row pt-4">
           <div class="col-6">
               <h2 class="text-primary">Product List</h2>
           </div>
           <div class="col-6 text-right">
               <a  asp-action="UpSert" class="btn btn-primary">
                  <i class="fas fa-plus"></i> &nbsp; Create New Product
                   </a>        
           </div>
       </div>
       <br><br />

       @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>       
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                   <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="UpSert" class="btn btn-primary mx-2">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                   </tr>
                }
            </tbody>
        </table>
    }else
    {
        <p>No product exists. </p>
    }
</div>